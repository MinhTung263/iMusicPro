<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            app:theme="@style/ToolbarColoredBackArrow"
            android:id="@+id/myToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayoutplaynhac"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </android.support.design.widget.TabLayout>
        <me.relex.circleindicator.CircleIndicator
            android:layout_marginTop="-40dp"
            android:id="@+id/ci_phatnhac"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:ci_width="7dp"
            app:ci_gravity="center"
            app:ci_orientation="horizontal"
            app:ci_height="7dp">
        </me.relex.circleindicator.CircleIndicator>
        <LinearLayout
            android:background="@color/colorMenu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:layout_weight="1"
                android:id="@+id/viewPagerplaynhac"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_marginTop="25dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:id="@+id/layoutLoadSong"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_above="@+id/layoutBtnSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/txtTimeSong"
                    android:padding="5dp"
                    android:layout_weight="1.5"
                    android:text="00:00"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_weight="7"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/custom_seekbar"
                    android:id="@+id/sbSong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/txtTimeTotal"
                    android:padding="5dp"
                    android:layout_weight="1.5"
                    android:text="00:00"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutBtnSong"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:orientation="horizontal">
                <ImageButton
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:src="@drawable/prev"
                    android:id="@+id/btnPre"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp" />
                <ImageButton
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:src="@drawable/playsong"
                    android:id="@+id/btnPlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp" />
                <ImageButton
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:id="@+id/btnNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/next" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
</LinearLayout>