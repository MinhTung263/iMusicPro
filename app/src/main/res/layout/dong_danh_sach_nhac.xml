<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_musicicon"
                    android:src="@drawable/music"
                    android:id="@+id/txtDongNhacHinhAnh"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </FrameLayout>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/frameLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txtDongNhacTenBH"
                    android:textSize="16sp"
                    android:text="Anh yêu em"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="italic"
                    android:layout_below="@+id/txtDongNhacTenBH"
                    android:id="@+id/txtDongNhacTenCasi"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:text="Minh vương"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageButton
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_dot"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>