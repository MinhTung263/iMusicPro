<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_musicicon"
                    android:src="@drawable/music"
                    android:id="@+id/imgTimKiem"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </FrameLayout>
            <TextView
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/frameLayout"
                android:id="@+id/tvBaiHatTimKiem"
                android:textSize="16sp"
                android:text="Anh yêu em"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:textStyle="italic"
                android:layout_below="@+id/tvBaiHatTimKiem"
                android:layout_toEndOf="@+id/frameLayout"
                android:id="@+id/tvCasiTimKiem"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:text="Minh vương"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>